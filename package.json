{
  "name": "yao-docs",
  "version": "1.0.0",
  "description": "yao documents",
  "author": "wwsheng009 <vincentwwsheng@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/wwsheng009/yao-docs",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build:index": "node --import tsx scripts/cleanup.ts && node --import tsx scripts/generate_index.ts",
    "generate": "pnpm run build:index && node --import tsx scripts/generate.ts && npm run prettier -- ./docs/.vitepress/ --write",
    "dev": "pnpm run generate && vitepress dev docs --host",
    "build": "pnpm run generate && vitepress build docs && node --import tsx scripts/postbuild.ts",
    "serve": "vitepress serve docs",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --fix",
    "release": "tsx scripts/release.ts",
    "update": "tsx scripts/update.ts",
    "prettier": "npx prettier docs --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "prettier --check --write docs",
    "format:fail": "prettier --check docs",
    "compile": "node --import tsx scripts/compile_md.ts"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/md5": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vite-pwa/vitepress": "^0.0.5",
    "bumpp": "^9.11.1",
    "busuanzi.pure.js": "^1.0.3",
    "dayjs": "^1.11.13",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-vue": "^9.33.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "gray-matter": "^4.0.3",
    "lint-staged": "^13.3.0",
    "markdown-eslint-parser": "^1.2.1",
    "md5": "^2.3.0",
    "medium-zoom": "^1.1.0",
    "mermaid": "^11.6.0",
    "moment": "^2.30.1",
    "ohmyfetch": "^0.4.21",
    "postcss": "^8.5.3",
    "postcss-nested": "^6.2.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "simple-git": "^3.27.0",
    "simple-git-hooks": "^2.13.0",
    "sitemap-ts": "^1.9.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "unocss": "^66.1.2",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^0.21.2",
    "vitepress": "2.0.0-alpha.2",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vue": "^3.5.15",
    "vue-eslint-parser": "^9.4.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "prettier --cache --write"
    ]
  }
}
