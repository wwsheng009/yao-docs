{
  "name": "计划",
  "action": {
    "bind": {
      "model": "plan",
      "option": {
        "withs": {
          "items": {}
        }
      }
    },

    "before:delete": "scripts.plan.BeforeDeletePlan"
  },
  "layout": {
    "form": {
      "sections": [
        {
          "columns": [
            { "name": "标签", "width": 8 },
            { "name": "名称", "width": 8 },
            { "name": "状态", "width": 8 },
            { "name": "开始时间", "width": 8 },
            { "name": "结束时间", "width": 8 },
            { "name": "物资清单", "width": 24 }
          ]
        }
      ]
    },
    "actions": [
      {
        "title": "返回",
        "icon": "icon-arrow-left",
        "showWhenAdd": true,
        "showWhenView": true,
        "action": [
          {
            "name": "CloseModal",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "title": "保存",
        "icon": "icon-check",
        "style": "primary",
        "showWhenAdd": true,
        "action": [
          {
            "name": "Submit",
            "type": "Form.submit",
            "payload": {}
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ]
      },
      {
        "action": [
          {
            "name": "Delete",
            "payload": {
              "model": "material"
            },
            "type": "Form.delete"
          },
          {
            "name": "Back",
            "type": "Common.closeModal",
            "payload": {}
          }
        ],
        "confirm": {
          "desc": "请确认删除，删除后数据无法恢复",
          "title": "确认"
        },
        "icon": "icon-trash-2",
        "style": "danger",
        "title": "Delete"
      }
    ]
  },
  "fields": {
    "form": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请输入 名称"
          },
          "type": "Input"
        },
        "view": { "props": {}, "type": "" }
      },
      "开始时间": {
        "bind": "start",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请选择 开始时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        }
      },
      "状态": {
        "bind": "status",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "options": [
              { "label": "草稿", "value": "草稿" },
              { "label": "进行中", "value": "进行中" },
              { "label": "已完成", "value": "已完成" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Select"
        }
      },
      "结束时间": {
        "bind": "end",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请选择 结束时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        }
      },
      "物资清单": {
        "bind": "items",
        "edit": {
          "type": "List",
          "props": {
            "name": "plan_item",
            "showLabel": true
          }
        }
      }
    }
  }
}
