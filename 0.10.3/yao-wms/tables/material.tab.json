{
  "name": "物资",
  "action": {
    "bind": {
      "model": "material",
      "option": {
        "form": "material",
        "withs": {
          "category": {},
          "supplier": {}
        }
      }
    }
  },
  "layout": {
    "table": {
      "columns": [
        {
          "width": 100,
          "name": "ID"
        },
        {
          "name": "厂商",
          "width": 100
        },
        {
          "width": 160,
          "name": "名称"
        },
        {
          "name": "类目",
          "width": 100
        },
        {
          "width": 160,
          "name": "图表"
        },
        {
          "width": 160,
          "name": "图片"
        },
        {
          "name": "介绍",
          "width": 160
        },
        {
          "name": "创建时间",
          "width": 160
        },
        {
          "name": "更新时间",
          "width": 160
        }
      ],
      "operation": {
        "actions": [
          {
            "icon": "icon-eye",
            "action": [
              {
                "type": "Common.openModal",
                "payload": {
                  "Form": {
                    "model": "material",
                    "type": "view"
                  }
                },
                "name": "OpenModal"
              }
            ],
            "title": "查看"
          },
          {
            "title": "编辑",
            "icon": "icon-edit-2",
            "action": [
              {
                "payload": {
                  "Form": {
                    "model": "material",
                    "type": "edit"
                  }
                },
                "name": "OpenModal",
                "type": "Common.openModal"
              }
            ]
          },
          {
            "title": "Delete",
            "icon": "icon-trash-2",
            "style": "danger",
            "confirm": {
              "title": "确认",
              "desc": "请确认删除，删除后数据无法恢复"
            },
            "action": [
              {
                "name": "Delete",
                "type": "Table.delete",
                "payload": {
                  "model": "material"
                }
              }
            ]
          }
        ],
        "width": 140
      },
      "props": {
        "scroll": {
          "x": "max-content"
        }
      }
    },
    "primary": "id",
    "header": {
      "preset": {}
    },
    "filter": {
      "actions": [
        {
          "icon": "icon-plus",
          "action": [
            {
              "payload": {
                "pathname": "/x/Form/material/0/edit"
              },
              "type": "Common.historyPush",
              "name": "HistoryPush"
            }
          ],
          "title": "新增物资",
          "width": 3
        },
        {
          "action": [
            {
              "type": "Common.historyPush",
              "payload": {
                "pathname": "/x/Form/material/0/edit"
              },
              "name": "HistoryPush"
            }
          ],
          "title": "创建",
          "width": 3,
          "icon": "icon-plus"
        }
      ],
      "columns": [
        {
          "name": "名称"
        }
      ]
    }
  },
  "fields": {
    "filter": {
      "名称": {
        "edit": {
          "type": "Input",
          "props": {
            "placeholder": "请输入 名称"
          }
        },
        "bind": "where.name.match"
      }
    },
    "table": {
      "厂商": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "placeholder": "请输入 厂商"
          }
        },
        "bind": "supplier_id",
        "view": {
          "props": {},
          "type": "Text"
        }
      },
      "创建时间": {
        "bind": "created_at",
        "view": {
          "type": "Text",
          "props": {
            "format": "YYYY-MM-DD HH:mm:ss"
          }
        },
        "edit": {
          "props": {
            "placeholder": "请选择 创建时间",
            "showTime": {
              "format": "HH:mm:ss"
            }
          },
          "type": "DatePicker"
        }
      },
      "名称": {
        "view": {
          "type": "Text",
          "props": {}
        },
        "edit": {
          "type": "Input",
          "props": {
            "placeholder": "请输入 名称"
          }
        },
        "bind": "name"
      },
      "图片": {
        "bind": "images",
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {}
        }
      },
      "介绍": {
        "bind": "detail",
        "view": {
          "props": {
            "title": "介绍"
          },
          "type": "Tooltip"
        },
        "edit": {
          "type": "TextArea",
          "props": {
            "placeholder": "请输入 介绍",
            "autoSize": {
              "minRows": 2,
              "maxRows": 6
            }
          }
        }
      },
      "更新时间": {
        "view": {
          "type": "Text",
          "props": {
            "format": "YYYY-MM-DD HH:mm:ss"
          }
        },
        "edit": {
          "type": "DatePicker",
          "props": {
            "placeholder": "请选择 更新时间",
            "showTime": {
              "format": "HH:mm:ss"
            }
          }
        },
        "bind": "updated_at"
      },
      "图表": {
        "bind": "icon",
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {
            "style": {
              "width": 36,
              "height": 36,
              "borderRadius": "50%"
            }
          }
        }
      },
      "ID": {
        "edit": {
          "type": "InputNumber",
          "props": {
            "placeholder": "请输入 ID",
            "disabled": true
          }
        },
        "bind": "id",
        "view": {
          "type": "Text",
          "props": {}
        }
      },
      "类目": {
        "bind": "category_id",
        "view": {
          "type": "Tag",
          "props": {
            "placeholder": "请输入 类目",
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "material.category",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        },
        "edit": {
          "type": "Select",
          "props": {
            "placeholder": "请输入 类目",
            "xProps": {
              "$remote": {
                "process": "yao.component.SelectOptions",
                "query": {
                  "model": "material.category",
                  "label": "name",
                  "value": "id"
                }
              }
            }
          }
        }
      }
    }
  },
  "config": {
    "full": true
  }
}
