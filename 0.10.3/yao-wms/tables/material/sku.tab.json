{
  "name": "单品",
  "action": {
    "bind": {
      "model": "material.sku",
      "option": {
        "form": "material.sku",
        "withs": {
          "material": {
            "query": { "withs": { "category": {}, "supplier": {} } }
          }
        }
      }
    },
    "before:delete": "scripts.sku.BeforeDelete",
    "before:delete-in": "scripts.sku.BeforeDeleteIn",
    "after:search": "scripts.sku.AfterSearch",
    "after:find": "scripts.sku.AfterFind",
    "after:save": "scripts.sku.AfterSave",
    "search": {
      "default": [
        {
          "withs": {
            "material": {
              "query": { "withs": { "category": {}, "supplier": {} } }
            }
          }
        },
        null,
        10
      ]
    }
  },
  "layout": {
    "filter": {
      "columns": [{ "name": "关键词" }],
      "actions": [
        {
          "action": [
            {
              "name": "HistoryPush",
              "payload": {
                "pathname": "/x/Form/material.sku/0/edit"
              },
              "type": "Common.historyPush"
            }
          ],
          "icon": "icon-plus",
          "title": "::Create",
          "width": 3
        }
      ]
    },
    "header": {
      "actions": [],
      "preset": {
        "import": {
          "name": "sku",
          "actions": [
            {
              "title": "导入",
              "icon": "icon-import"
            }
          ]
        }
      }
    },
    "primary": "id",
    "table": {
      "columns": [
        { "name": "ID", "width": 100 },
        { "name": "规格型号", "width": 100 },
        { "name": "物资名称", "width": 100 },
        { "name": "物资图标", "width": 100 },
        { "name": "标签", "width": 160 },
        { "name": "单位", "width": 160 },
        { "name": "单价", "width": 160 },
        { "name": "税率", "width": 160 },
        { "name": "含税单价", "width": 160 },
        { "name": "列账单价", "width": 160 },
        { "name": "预警库存", "width": 100 },
        { "name": "图集", "width": 160 },
        { "name": "介绍", "width": 160 },
        { "name": "状态", "width": 160 }
      ],
      "operation": {
        "actions": [
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "material.sku",
                    "type": "view"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-eye",
            "title": "查看"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "material.sku",
                    "type": "edit"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-edit-2",
            "title": "编辑"
          },
          {
            "action": [
              {
                "name": "Confirm",
                "type": "Common.confirm",
                "payload": {
                  "title": "确认删除",
                  "content": "删除后不可撤销！"
                }
              },
              {
                "name": "Delete",
                "payload": {
                  "model": "material.sku"
                },
                "type": "Table.delete"
              }
            ],
            "icon": "icon-trash-2",
            "style": "danger",
            "title": "Delete"
          }
        ]
      }
    }
  },
  "fields": {
    "filter": {
      "关键词": {
        "bind": "where.material.name.match",
        "edit": {
          "props": { "placeholder": "请输入 关键词" },
          "type": "Input"
        }
      }
    },
    "table": {
      "ID": {
        "bind": "id",
        "edit": {
          "props": { "disabled": true, "placeholder": "请输入 ID" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "规格型号": {
        "bind": "spec_tags",
        "edit": {
          "props": { "placeholder": "请输入 税率" },
          "type": "Input"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "物资名称": {
        "bind": "material.name",
        "view": { "props": {}, "type": "Text" }
      },
      "物资图标": {
        "bind": "material.icon",
        "view": {
          "type": "Image",
          "compute": {
            "process": "Download",
            "args": ["$C(value)", "$C(props)", "$C(type)", "$C(id)", "$C(path)"]
          },
          "props": {}
        }
      },
      "介绍": {
        "bind": "detail",
        "view": { "props": { "title": "介绍" }, "type": "Tooltip" }
      },
      "列账单价": {
        "bind": "fin_price",
        "edit": {
          "props": { "placeholder": "请输入 列账单价" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "创建时间": {
        "bind": "created_at",
        "view": { "props": { "format": "YYYY-MM-DD HH:mm:ss" }, "type": "Text" }
      },
      "单价": {
        "bind": "price",
        "edit": {
          "props": { "placeholder": "请输入 单价" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "单位": {
        "bind": "unit",
        "edit": { "props": { "placeholder": "请输入 单位" }, "type": "Input" },
        "view": { "props": {}, "type": "Text" }
      },
      "含税单价": {
        "bind": "tax_price",
        "edit": {
          "props": { "placeholder": "请输入 含税单价" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "图集": {
        "bind": "images",
        "view": {
          "type": "Image",
          "compute": "Download",
          "props": {}
        }
      },
      "物资": {
        "bind": "material_id",
        "edit": {
          "props": { "placeholder": "请输入 物资" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "状态": {
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              { "label": "在产", "value": "在产" },
              { "label": "停产", "value": "停产" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Select"
        },
        "view": {
          "props": {
            "options": [
              { "label": "在产", "value": "在产" },
              { "label": "停产", "value": "停产" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Tag"
        }
      },
      "税率": {
        "bind": "tax_rate",
        "edit": {
          "props": { "placeholder": "请输入 税率" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      },
      "标签": {
        "bind": "sku_sn",
        "edit": { "props": { "placeholder": "请输入 编码" }, "type": "Input" },
        "view": { "props": {}, "type": "Text" }
      },
      "规格": {
        "bind": "specs",
        "edit": {
          "props": {
            "autoSize": { "maxRows": 6, "minRows": 2 },
            "placeholder": "请输入 规格"
          },
          "type": "TextArea"
        },
        "view": { "props": { "title": "规格" }, "type": "Tooltip" }
      },
      "预警库存": {
        "bind": "stock",
        "edit": {
          "props": { "placeholder": "请输入 预警库存" },
          "type": "InputNumber"
        },
        "view": { "props": {}, "type": "Text" }
      }
    }
  }
}
