{
  "name": "计划",
  "action": {
    "bind": {
      "model": "plan",
      "option": {
        "form": "plan",
        "withs": {
          "items": {
            "query": {
              "select": ["id", "sku_id", "amount", "amount_plan"]
            }
          }
        }
      }
    },
    "find": {
      "default": [null, null, 10]
    },
    "after:save": "scripts.plan.AfterSave",
    "before:delete": "scripts.plan.BeforeDeletePlan",
    "before:delete-in": "scripts.plan.BeforeDeletePlanIn"
  },
  "layout": {
    "header": {},
    "filter": {
      "columns": [{ "name": "名称" }],
      "actions": [
        {
          "action": [
            {
              "name": "HistoryPush",
              "payload": {
                "pathname": "/x/Form/plan/0/edit"
              },
              "type": "Common.historyPush"
            }
          ],
          "icon": "icon-plus",
          "title": "新建计划",
          "width": 3
        }
      ]
    },
    "table": {
      "operation": {
        "actions": [
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "plan",
                    "type": "view"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-eye",
            "title": "查看"
          },
          {
            "action": [
              {
                "name": "OpenModal",
                "payload": {
                  "Form": {
                    "model": "plan",
                    "type": "edit"
                  }
                },
                "type": "Common.openModal"
              }
            ],
            "icon": "icon-edit-2",
            "title": "编辑"
          },
          {
            "action": [
              {
                "name": "Delete",
                "payload": {
                  "model": "plan"
                },
                "type": "Table.delete"
              }
            ],
            "confirm": {
              "desc": "请确认删除，删除后数据无法恢复",
              "title": "确认"
            },
            "icon": "icon-trash-2",
            "style": "danger",
            "title": "Delete"
          }
        ],
        "width": 140
      },
      "columns": [
        { "name": "标签", "width": 100 },
        { "name": "名称", "width": 240 },
        { "name": "开始时间", "width": 260 },
        { "name": "结束时间", "width": 260 },
        { "name": "状态" }
      ]
    }
  },
  "fields": {
    "table": {
      "名称": {
        "bind": "name",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请输入 名称"
          },
          "type": "Input"
        },
        "view": {
          "type": "Text"
        }
      },
      "开始时间": {
        "bind": "start",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请选择 开始时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        },
        "view": {
          "type": "Text"
        }
      },
      "状态": {
        "bind": "status",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "options": [
              { "label": "草稿", "value": "草稿" },
              { "label": "进行中", "value": "进行中" },
              { "label": "已完成", "value": "已完成" }
            ],
            "placeholder": "请选择 状态"
          },
          "type": "Select"
        },
        "view": {
          "type": "Text"
        }
      },
      "结束时间": {
        "bind": "end",
        "edit": {
          "props": {
            "itemProps": {
              "rules": [{ "required": true }]
            },
            "placeholder": "请选择 结束时间",
            "showTime": { "format": "HH:mm:ss" }
          },
          "type": "DatePicker"
        },
        "view": {
          "type": "Text"
        }
      }
    }
  }
}
